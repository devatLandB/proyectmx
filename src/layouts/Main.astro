---
import Navbar from "../components/Navbar.astro"
import Footer from "../components/Footer.astro"
---


<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>Proyect.mx</title>
	</head>
	<body>
        <div class="min-h-screen flex flex-col bg-no-repeat bg-cover" style="background-image: url('https://picsum.photos/id/10/2560/1600');">
            <header class="w-screen">
                <Navbar />
            </header>
            <div class="flex-1 flex flex-col sm:flex-row">
                <main class="flex-1">
                    <slot/>
                </main>
            </div>
            <footer class="w-screen">
                <Footer/>
            </footer>
        </div>
        <script is:inline src="https://cdnjs.cloudflare.com/ajax/libs/flowbite/1.8.0/flowbite.min.js"></script>
	</body>
</html>


