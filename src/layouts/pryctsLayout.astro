---
import WhiteBG from "./WhiteBG.astro";
import Slider from "../components/Slider.astro";
import PryctsGallery from "../components/PryctsGallery.astro";
import OtherProyects from "../components/OtherProyects.astro";
const { frontmatter } = Astro.props;
---


<WhiteBG title="Casa RA">
    <div class="border border-dashed border-red-500">
      <div class="w-screen">
        <Slider carouselImg1={frontmatter.img1} carouselImg2={frontmatter.img2} carouselImg3={frontmatter.img3} carouselImg4={frontmatter.img4} carouselImg5={frontmatter.img5}/>
      </div>
    </div>
    <div class="container mx-auto border border-dashed border-blue-500">
        <div class="py-12 px-4 md:px-0">
            <p class="font-serif text-2xl font-bold">{frontmatter.title}</p>
            <h1 class="text-5xl font-semibold text-pryctblu">{frontmatter.proyect}</h1>
        </div>
        <div class="py-8 px-4 md:px-0">
            <div class="md:columns-2 columns-1 gap-10 font-serif text-justify lg:pb-12">
                <slot/>
            </div>
            <div class="py-8">
                <div class="w-100 flex flex-row flex-nowrap justify-start pb-8">
                        <div class="w-40 mr-12 font-serif">Ubicaci√≥n</div>
                        <div class="font-bold font-serif">{frontmatter.location}</div>
                </div>
                <div class="w-100 flex flex-row flex-nowrap justify-start pb-8">
                        <div class="w-40 mr-12 font-serif">Tipo</div>
                        <div class="font-bold font-serif">{frontmatter.typology}</div>
                </div>
                <div class="w-100 flex flex-row flex-nowrap justify-start">
                        <div class="w-40 mr-12 font-serif">Fecha</div>
                        <div class="font-bold font-serif">{frontmatter.date}</div>
                </div>
                
            </div>
        </div>
    </div>
    <div class="container mx-auto border border-dashed border-blue-500 pb-12">
      <div class="py-4 px-4 md:px-0">
        <p class="p-4 font-sans font-bold text-pryctblu">Planos</p>
      </div>
        <PryctsGallery images={frontmatter.images} />
    </div>
    
    <!-- Other Projects -->
    <div class="md:px-0 bg-gray-100">
      <div class="container mx-auto">
              <p class="p-4 font-bold uppercase font-sans text-pryctblu">M&aacute;s Proyectos</p>
        <OtherProyects />
      </div>
    </div>  
    <!-- // -->
</WhiteBG>

