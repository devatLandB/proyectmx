---
import WhiteBG from "../layouts/WhiteBG.astro";
import { Image } from 'astro:assets';

import * as pryctA from '../pages/proyectos/pryct-a.md';
import * as pryct_B from '../pages/proyectos/pryct-b.md';
import * as pryct_C from '../pages/proyectos/pryct-c.md';


import pryctA1 from '../img/proyectos/proyecto-a/img-gllry/1.jpg';
import pryctB1 from '../img/proyectos/proyecto-b/img-gllry/1.jpg';
import pryctC1 from '../img/proyectos/proyecto-c/img-gllry/4.jpg';
---

<WhiteBG title="Proyectos">
    <!-- title -->
    <div class="flex container mx-auto border border-dashed border-pink-500 justify-end">
        <div class="py-12">
            <h1 class="font-sans font-bold text-pryctgray text-3xl lg:text-5xl capitalize pl-4 md:pl-0">proyectos</h1>
        </div>
    </div>
    <!-- Section 1 :: 1 BIG LEFT 2 SMall -->
    <div class="container mx-auto border border-dashed border-orange-600">
        <div class="grid grid-cols-2 grid-rows-1 md:grid-rows-2 md:grid-cols-3  border border-dashed border-blue-700">
            <div class="col-span-2 md:row-span-2 border border-dashed border-red-700">
                <div class="flex flex-row align-middle justify-start">
                    <a href="./proyectos/pryct-a">
                      <div class="relative group">
                        <div class="opacity-0 group-hover:opacity-100 duration-300 absolute inset-0 z-10 flex flex-col justify-end items-center text-center text-white font-semibold pb-10">
                          <ul>
                            <li>
                              <p class="text-3xl font-serif text-base drop-shadow text-pryctgray">{pryctA.frontmatter.title}</p>
                            </li>
                            <li>
                                <p class="font-sans text-2xl drop-shadow text-pryctgray">{pryctA.frontmatter.proyect}</p>
                              </li>
                            <li>
                              <p class="font-serif text-base drop-shadow text-pryctgray">{pryctA.frontmatter.date}</p>
                            </li>
                          </ul>
                        </div>
                        <div class="bg-white-700">
                          <Image src={pryctA1} alt="xmpl" class="flex-1 h-auto max-w-full p-2 group-hover:opacity-40 duration-300"/>
                        </div>
                      </div>
                    </a>
                </div>
            </div>
            <div class="md:col-span-1 row-span-1 border border-dashed border-blue-700 flex md:flex-col flex-row flex-wrap align-middle justify-center">
              <a href="./proyectos/pryct-b">
                <div class="relative group">
                    <div class="opacity-0 group-hover:opacity-100 duration-300 absolute inset-0 z-10 flex flex-col justify-end pb-10 items-center text-center text-white font-semibold">
                      <ul>
                        <li>
                          <p class="font-serif text-base drop-shadow text-pryctgray">{pryct_B.frontmatter.title}</p>
                        </li>
                        <li>
                            <p class="font-sans text-2xl drop-shadow text-pryctgray">{pryct_B.frontmatter.proyect}</p>
                          </li>
                        <li>
                          <p class="font-serif text-base drop-shadow text-pryctgray">{pryct_B.frontmatter.date}</p>
                        </li>
                      </ul>
                      </div>
                      <div class="bg-white-700">
                        <Image src={pryctB1} alt="xmpl" class="flex-1 h-auto max-w-full p-2 group-hover:opacity-40 duration-300"/>
                      </div>
                </div>
              </a>
                    
            </div>
            <div class="md:col-span-1 row-span-1 border border-dashed border-blue-700 flex md:flex-col flex-row flex-wrap align-middle justify-center">
              <a href="./proyectos/pryct-c">
                <div class="relative group">
                    <div class="opacity-0 group-hover:opacity-100 duration-300 absolute inset-0 z-10 flex flex-col justify-end pb-10 items-center text-center text-white font-semibold">
                      <ul>
                        <li>
                          <p class="font-serif text-base drop-shadow text-pryctgray">{pryct_C.frontmatter.title}</p>
                        </li>
                        <li>
                            <p class="font-sans text-2xl drop-shadow text-pryctgray">{pryct_C.frontmatter.proyect}</p>
                          </li>
                        <li>
                          <p class="font-serif text-base drop-shadow text-pryctgray">{pryct_C.frontmatter.date}</p>
                        </li>
                      </ul>
                      </div>
                      <div class="bg-white-700">
                        <Image src={pryctC1} alt="xmpl" class="flex-1 h-auto max-w-full p-2 group-hover:opacity-40 duration-300"/>
                      </div>
                </div>
              </a>
            </div>
        </div>
    </div>
    <!-- Section 2 :: 3 small -->
    <div class="container mx-auto border border-dashed border-orange-600">
        <div class="grid grid-cols-2 md:grid-cols-3">
            <div class="col-span-1">
                <div class="flex flex-auto align-middle justify-center px-2 py-2">
                    <img src="https://picsum.photos/600/280" alt="1" class="flex-auto h-auto max-w-full">
                </div>
            </div>
            <div class="col-span-1">
                <div class="flex flex-auto align-middle justify-center px-2 py-2">
                    <img src="https://picsum.photos/600/280" alt="1" class="flex-auto h-auto max-w-full">
                </div>
            </div>
            <div class="col-span-2 md:col-span-1">
                <div class="flex flex-auto align-middle justify-center px-2 py-2">
                    <img src="https://picsum.photos/600/280" alt="1" class="flex-auto h-auto max-w-full">
                </div>
            </div>
        </div>
    </div>
    <!-- Section 3 :: 1 BIG RIGHT 2 SMall -->
    <div class="container mx-auto border border-dashed border-orange-600">
        <div class="grid grid-cols-2 grid-rows-1 md:grid-rows-2 md:grid-cols-3 border border-dashed border-blue-700">
            <div class="md:col-span-1 row-span-1 row-start-1 border border-dashed border-blue-700 flex md:flex-col flex-row flex-wrap align-middle justify-center">
                <!-- -->
                <div class="relative group">
                    <div class="opacity-0 group-hover:opacity-100 duration-300 absolute inset-0 z-10 flex justify-center items-center text-center text-white font-semibold">
                        <ul>
                          <li>
                            <p class="text-base drop-shadow">Un Lugar</p>
                          </li>
                          <li>
                              <p class="text-2xl drop-shadow">Proyecto 1</p>
                            </li>
                          <li>
                            <p class="text-base drop-shadow">2023</p>
                          </li>
                        </ul>
                      </div>
                      <img class="flex-auto h-auto max-w-full p-2 group-hover:opacity-70 duration-300" src="https://picsum.photos/600/280" alt="">
                </div>
            </div>
            <!-- -->
            <div class="md:col-span-1 row-span-1 md:row-start-2 border border-dashed border-blue-700 flex md:flex-col flex-row flex-wrap align-middle justify-center">
                <!-- -->
                <div class="relative group">
                    <div class="opacity-0 group-hover:opacity-100 duration-300 absolute inset-0 z-10 flex justify-center items-center text-center text-white font-semibold">
                        <ul>
                          <li>
                            <p class="text-base drop-shadow">Un Lugar</p>
                          </li>
                          <li>
                              <p class="text-2xl drop-shadow">Proyecto 1</p>
                            </li>
                          <li>
                            <p class="text-base drop-shadow">2023</p>
                          </li>
                        </ul>
                      </div>
                      <img class="flex-auto h-auto max-w-full p-2 group-hover:opacity-70 duration-300" src="https://picsum.photos/600/280" alt="">
                </div>
                <!-- -->
            </div>
            
            <div class="col-span-2 md:row-span-2 md:row-start-1 border border-dashed border-red-700">
                <div class="flex flex-row align-middle justify-end">
                    <a href="./proyectos/pryct-2">
                      <div class="relative group">
                        <div class="opacity-0 group-hover:opacity-100 duration-300 absolute inset-0 z-10 flex justify-center items-center text-center text-white font-semibold">
                          <ul>
                            <li>
                              <p class="text-base drop-shadow">Un Lugar</p>
                            </li>
                            <li>
                                <p class="text-2xl drop-shadow">Proyecto 2</p>
                              </li>
                            <li>
                              <p class="text-base drop-shadow">2023</p>
                            </li>
                          </ul>
                        </div>
                        <div class="bg-white-700">
                            <img class="flex-1 h-auto max-w-full p-2 group-hover:opacity-70 duration-300" src="https://picsum.photos/1000/500" alt="" />
                        </div>
                      </div>
                    </a>
                </div>
            </div>
        </div>
    </div>
     <!-- Section 4 :: 3 small -->
     <div class="container mx-auto border border-dashed border-orange-600">
        <div class="grid grid-cols-2 md:grid-cols-3">
            <div class="col-span-1">
                <div class="flex flex-auto align-middle justify-center px-2 py-2">
                    <img src="https://picsum.photos/600/280" alt="1" class="flex-auto h-auto max-w-full">
                </div>
            </div>
            <div class="col-span-1">
                <div class="flex flex-auto align-middle justify-center px-2 py-2">
                    <img src="https://picsum.photos/600/280" alt="1" class="flex-auto h-auto max-w-full">
                </div>
            </div>
            <div class="col-span-2 md:col-span-1">
                <div class="flex flex-auto align-middle justify-center px-2 py-2">
                    <img src="https://picsum.photos/600/280" alt="1" class="flex-auto h-auto max-w-full">
                </div>
            </div>
        </div>
    </div>
</WhiteBG>